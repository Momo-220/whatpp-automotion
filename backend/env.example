# ============================================
# CONFIGURATION SERVEUR
# ============================================
PORT=3000
NODE_ENV=development

# URL du frontend (pour CORS) - séparer par des virgules si plusieurs
# Exemple: FRONTEND_URL=https://votre-app.vercel.app,https://autre-domaine.com
FRONTEND_URL=http://localhost:5173

# ============================================
# CONFIGURATION WHATSAPP
# ============================================
# Dossier où sera stockée la session WhatsApp
WHATSAPP_SESSION_PATH=./whatsapp-session

# Délai entre chaque message en millisecondes (recommandé: 3000-5000)
MESSAGE_DELAY=3000

# ============================================
# CONFIGURATION UPLOAD
# ============================================
# Dossier pour stocker les fichiers Excel uploadés
UPLOAD_DIR=./uploads

